
@model List<KapasitematikBlog.Domain.Makale>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="/DataTables-1.10.21/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/1.6.2/css/buttons.dataTables.min.css" rel="stylesheet" />
<link href="/NiceAdmin/css/font-awesome.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Makale Listesi
            </header>
            <table border="0" cellspacing="5" cellpadding="5">
                <tbody>
                    <tr>
                        <td><a href="/Makale/AddMakale/" class="btn btn-info"><i class="fa fa-plus" aria-hidden="true"></i> Yeni Makale</a></td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-striped table-advance table-hover" id="mapTable">
                <thead>
                    <tr>
                        <th><i class="fa fa-globe"></i> Başlık</th>
                        <th><i class="fa fa-compass"></i> Açıklama</th>
                        <th><i class="fa fa-image"></i> Resim</th>
                        <th><i class=""></i> Kategori</th>
                        <th><i class="fa fa-pencil"></i> Güncelle</th>
                        <th><i class="fa fa-trash"></i> Sil</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.MakaleBaslik</td>
                            <td>@item.MakaleAciklama</td>
                            <td> <img src="~/images/@item.ResimUrl" width="100" height="100" /></td>
                            <td>@item.MakaleKategoriId</td>
                            <td>
                                <a href=" /Makale/MakaleGet/@item.MakaleId" class="btn btn-success">Güncelle</a>
                            </td>

                            <td>
                               <a href="/Makale/DeleteMakale/@item.MakaleId"class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    </tbody>
                }

            </table>
            @*<button type="button" id="export" class="btn btn-primary"><i class="fa fa-file-excel-o" aria-hidden="true"></i> Excel'e Aktar</button>*@
        </section>
    </div>
</div>







