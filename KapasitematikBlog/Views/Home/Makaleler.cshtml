@model IEnumerable<KapasitematikBlog.Domain.Makale>

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h2>Makaleler</h2>
                <div class="divider mx-auto my-4"></div>
            </div>
        </div>
    </div>
    <div class="row shuffle-wrapper portfolio-gallery">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6 col-md-6 mb-4 shuffle-item" data-groups="[&quot;cat2&quot;]">
                <div class="position-relative doctor-inner-box">
                    <div class="doctor-profile">
                        <div class="doctor-img">
                            <a href=" single.html"><img style="width:250px; height:200px" alt="" src="@item.ResimUrl" /></a>
                            <p>@item.MakaleBaslik</p>
                            <h4>@item.MakaleAciklama</h4>
                            @*<img src="~/novena/images/team/2.jpg" alt="doctor-image" class="img-fluid w-100">*@
                        </div>
                    </div>                 
                </div>
            </div>
        }
    </div>
</div>
